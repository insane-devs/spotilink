{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationMap": true,
        "lib": ["ESNext"],
        "module": "Node16",
        "moduleResolution": "Node",
        "outDir": "dist",
        "pretty": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2020"
    },
    "include": [
        "src"
    ],
    "exclude": ["node_modules"]
}
